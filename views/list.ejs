<%- include("header") %>

  <div class="container">
  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>
  <div class="box">
    <%   for(let i=0; i<newListItems.length; i++){ %>
    <div class="item">
      <input type="checkbox">
      <p><%= newListItems[i] %></p>
    </div>
    <% } %>
    <form class="item" action="/" method="post">
      <button type="submit" name="delete" value="deleteitem">-</button>
      <input placeholder="Enter Item" type="text" name="newItem" autocomplete="off">
      <button type="submit" name="list" value="<%=listTitle%>">+</button>
    </form>
  </div>
  </div>

<%- include("footer") %>
